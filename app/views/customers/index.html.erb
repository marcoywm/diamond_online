<h1>Listing customers</h1>
</br>
<%=link_to 'back to Manage dashborad', "http://localhost:3000/administrator"%>
<table>
  <tr>
    <th>Fname</th>
    <th>Lname</th>
    <th>Address</th>
    <th>City</th>
    <th>Email</th>
    <th>Postcode</th>
    <th>Username</th>
    <th>Password</th>
    <th>Phone</th>
    <th>Pay method</th>
    <th>Purchase amount</th>
    <th>Province</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @customers.each do |customer| %>
  <tr>
    <td><%= customer.fname %></td>
    <td><%= customer.lname %></td>
    <td><%= customer.address %></td>
    <td><%= customer.city %></td>
    <td><%= customer.email %></td>
    <td><%= customer.postCode %></td>
    <td><%= customer.userName %></td>
    <td><%= customer.password %></td>
    <td><%= customer.phone %></td>
    <td><%= customer.pay_method %></td>
    <td><%= customer.pur_amount %></td>
    <td><%= customer.province.name %></td>
    <td><%= link_to 'Show', customer %></td>
    <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
    <td><%= link_to 'Destroy', customer, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

